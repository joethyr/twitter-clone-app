<%= simple_form_for(@chirp) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :chirp, label: "Chirp", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "What's chirping?", autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
